generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model countries {
  country_id      Int       @id @default(autoincrement())
  name            String    @db.VarChar(25) @unique
  code_2          String    @db.VarChar(2)  @unique
  code_3          String    @db.VarChar(3)  @unique
  phone_prefix    Int       @unique
  currency        String    @db.VarChar(3)
  currency_symbol String    @db.VarChar(10)
  capital         String    @db.VArChar(80)
} ENGINE=InnoDB CHARSET=utf8

model events {
  event_id        Int       @id @default(autoincrement())
  event_uuid      String    @db.VarChar(36) @unique
  name            String    @db.VarChar(50) @unique
  country         Countries @relation(fields: [country_uuid], references: [id])
  createdBy       Int?
  createdByUuid   String?   @db.VarChar(36)  
}

model todo {
  id              Int       @id @default(autoincrement())
  uuid            String    @db.VarChar(36) @unique
  createdBy       Int?
  createdByUuid   String?   @db.VarChar(36)
  toCompleteBy    Int?
  toCompleteAt    DateTime?
  text            String
  completedAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now())
}

model user {
  id              Int      @id @default(autoincrement())
  uuid            String   @db.VarChar(36) @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())
  active          Boolean  @default(false)
}

model user_rights {
  id              Int      @id @default(autoincrement())
  uuid            String   @db.VarChar(36)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())
}

model contacts {
  id              Int      @id @default(autoincrement())
  uuid            String   @db.VarChar(36) @unique
  firstname       String   @db.VarChar(50)
  lastname        String   @db.VarChar(50)^
  gender          Int      
  email           String   @unique(map: "User_email_key") @db.VarChar(50)
  phone_private   String   @db.VarChar(25)
  mobile_private  String   @db.VarChar(25)
  fax_private     String   @db.VarChar(25)
  phone_work      String   @db.VarChar(25)
  mobile_work     String   @db.VarChar(25)
  fax_work        String   @db.VarChar(25)
  address_street
  address_housenr
  address_postalcode
  address_city
  address_country
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())
  active          Boolean  @default(false)
}

model contacts_extra_data {
  id              Int      @id @default(autoincrement())
  contactId       Int 
  contactUuid     String   @db.VarChar(36) 
}

