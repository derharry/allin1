generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model contacts {
  id             Int           @id @default(autoincrement())
  uuid           String        @db.VarChar(36)
  firstname      String        @db.VarChar(30)
  lastname       String        @db.VarChar(50)
  gender_id      Int
  nationality_id Int
  birthday       DateTime      @db.Date
  static_gender  static_gender @relation(fields: [gender_id], references: [id])
  countries      countries     @relation(fields: [nationality_id], references: [id])

  @@index([gender_id], map: "gender_id")
  @@index([nationality_id], map: "nationality_id")
}

model countries {
  id              Int        @id @default(autoincrement())
  name            String     @unique @db.VarChar(100)
  code_2          String     @unique @db.Char(2)
  code_3          String     @unique @db.Char(3)
  phone_prefix    Int
  currency        String?    @db.VarChar(3)
  currency_symbol String?    @db.VarChar(10)
  capital         String?    @db.VarChar(80)
  contacts        contacts[]
  events          events[]
}

model currency {
  id              Int    @id @default(autoincrement())
  currency_code   String @unique @db.VarChar(3)
  currency_name   String @unique @db.VarChar(50)
  currency_symbol String @db.VarChar(50)
}

model events {
  id         Int       @id @default(autoincrement())
  uuid       String    @unique @db.VarChar(36)
  name       String    @unique @db.VarChar(50)
  country_id Int
  countries  countries @relation(fields: [country_id], references: [id])

  @@index([country_id], map: "events_country_id_fkey")
}

model languages {
  id            Int    @id @default(autoincrement())
  language_code String @unique @db.VarChar(10)
  language_name String @unique @db.VarChar(100)
}

model static_gender {
  id          Int        @id @default(autoincrement())
  name        String     @db.VarChar(10)
  description String     @db.VarChar(100)
  contacts    contacts[]
}

model todos {
  id                Int       @id @default(autoincrement())
  uuid              String    @unique @db.VarChar(36)
  created_by_id     Int?
  created_by_uuid   String?   @db.VarChar(36)
  to_complete_by_id Int?
  to_complete_at    DateTime?
  text              String
  completed_at      DateTime?
  created_at        DateTime  @default(now())
  updated_at        DateTime  @default(now())
}

model users {
  id         Int      @id @default(autoincrement())
  uuid       String   @unique @db.VarChar(36)
  firstname  String   @db.VarChar(40)
  lastname   String   @db.VarChar(40)
  email      String   @unique @db.VarChar(80)
  password   String   @db.VarChar(30)
  active     Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}
